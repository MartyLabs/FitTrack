{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "App.tsx", "src/**/*.ts", "src/**/*.tsx"],
  "extends": "@react-native/typescript-config/tsconfig.json"
}
